<TreeViewItem
    x:Class="PHmiTools.Controls.IoDeviceItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    mc:Ignorable="d" 
    d:DesignHeight="300" d:DesignWidth="300">
    <TreeViewItem.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/PHmiResources;component/Styles/SmallImageStyle.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/PHmiResources;component/Styles/ToolBarTextBlockStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </TreeViewItem.Resources>
    <TreeViewItem.Header>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Image x:Name="image" Style="{StaticResource SmallImageStyle}" Source="pack://application:,,,/PHmiResources;component/Images/input_device.png"/>
            <TextBlock Grid.Column="1" x:Name="tb" Style="{StaticResource ToolBarTextBlockStyle}"/>
        </Grid>
    </TreeViewItem.Header>
</TreeViewItem>
